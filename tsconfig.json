{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"declarationDir": "src/types",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": [
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@tests/*": [
				"./src/__tests__/*"
			],
			"@types/*": [
				"./src/@types/*"
			],
			"@utils/*": [
				"./src/utils/*"
			]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		]
	},
	"exclude": [
		"**/node_modules"
	],
	"include": [
		"src/**/*.js",
		"src/**/*.ts"
	]
}
